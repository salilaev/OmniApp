<resources>
    <style name="Base.Theme.Stopwatch" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
        <item name="colorPrimary">#FF6750A4</item>
    </style>

    <style name="Theme.Stopwatch" parent="Base.Theme.Stopwatch">
        <item name="android:textColor">@color/white</item>
        <item name="android:tint">@color/white</item>
        <item name="drawerArrowStyle">@style/DrawerStyle</item>
    </style>

    <style name="Theme.MainActivity" parent="Theme.Stopwatch">
        <item name="android:background">@color/black</item>
        <item name="drawerArrowStyle">@style/DrawerStyle</item>
    </style>

    <style name="CustomActionBar.MainActivity" parent="Widget.MaterialComponents.ActionBar.Solid">
        <item name="android:background">@color/black</item>
    </style>

    <style name="DrawerStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
        <item name="spinBars">true</item>
    </style>
</resources>